<Window x:Class="PizzaCraft.W_OrderSuccesful"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaCraft"
        mc:Ignorable="d"
        Title="W_OrderSuccesful" Height="350" Width="500">
    <Grid Background="#FFFFF8E6">
        <Image HorizontalAlignment="Center" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="/Logo.png"/>
        <Label x:Name="TotalPrice" Content="Заказ Создан!" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFCD0000" FontWeight="Bold" FontFamily="Bahnschrift"/>
        <Button x:Name="BackToMenu" Content="Назад" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Background="#FF186A3A" Foreground="White" BorderBrush="{x:Null}" Height="47" Width="172" FontSize="20" FontWeight="Bold" FontFamily="Bahnschrift" Click="BackToMenu_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
